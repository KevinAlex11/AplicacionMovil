<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientePedSillon">

    <TextView
        android:id="@+id/lblPedSillon"
        android:layout_width="80dp"
        android:layout_height="37dp"
        android:text="Sillon"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133" />

    <ImageButton
        android:id="@+id/btnRegSillon"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/ListaAutos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484"
        app:srcCompat="@drawable/regresar" />

    <Button
        android:id="@+id/btnPedSillonRealizar"
        android:layout_width="180dp"
        android:layout_height="54dp"
        android:text="Realizar pedido"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <ScrollView
        android:id="@+id/ListaAutos"
        android:layout_width="395dp"
        android:layout_height="578dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPedSillon"
        app:layout_constraintVertical_bias="0.050000012">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/lblPS1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Domicilio"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedColchonDomicilio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPS2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero Domicilio"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedSillonNumDomicilio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPS3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colonia"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedSillonColonia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPS4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Municipio"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedSillonMunicipio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPS5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha Lavada"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedSillonFechaLav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPS6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora Lavada"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedSillonHoraLav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPS7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marca Sillon"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedSillonMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPS8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero Sillones"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedSillonNumeroSillones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPS9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero De Cojines"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedSillonNumCojines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPS10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo De Tela"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedSillonTipoTela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
