<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientePedAuto">

    <TextView
        android:id="@+id/lblPedAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automovil"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <ImageButton
        android:id="@+id/btnRegAuto"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/ListaAutos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/regresar" />

    <Button
        android:id="@+id/btnPedAutoRealizar"
        android:layout_width="180dp"
        android:layout_height="54dp"
        android:text="Realizar pedido"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/ListaAutos"
        android:layout_width="395dp"
        android:layout_height="578dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPedAuto"
        app:layout_constraintVertical_bias="0.050000012">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/lblPA1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Domicilio"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedAutoDomicilio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPA2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero Domicilio"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedAutoNumDomicilio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPA3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colonia"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedAutoColonia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPA4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Municipio"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedAutoMunicipio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPA5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha Lavada"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedAutoFechaLav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPA6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora Lavada"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedAutoHoraLav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPA7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo De Automovil"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedAutoTamano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPA8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marca De Automovil"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedAutoMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPA9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modelo De Automovil"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedAutoModeloAuto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/lblPA10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo De Tela Asientos"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPedAutoTipoTelaAsiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>