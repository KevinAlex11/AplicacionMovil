
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ClientePedColchon">

    <TextView
        android:id="@+id/lblPedcolchon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colchon"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ImageButton
        android:id="@+id/btnRegColchon"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/ListaAutos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285"
        app:srcCompat="@drawable/regresar" />

    <Button
    android:id="@+id/btnPedColchonRegistrar"
    android:layout_width="180dp"
    android:layout_height="54dp"
    android:text="Realizar pedido"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/ListaAutos" />

<ScrollView
    android:id="@+id/ListaAutos"
    android:layout_width="395dp"
    android:layout_height="578dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/lblPedcolchon"
    app:layout_constraintVertical_bias="0.050000012">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/lblPC1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00008B"
            android:text="Domicilio"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtPedColchonDomicilio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/lblPC2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00008B"
            android:text="Numero Domicilio"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtPedColchonNumDomicilio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/lblPC3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00008B"
            android:text="Colonia"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtPedColchonColonia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/lblPC4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00008B"
            android:text="Municipio"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/txtMunicipioColchon"
            android:layout_width="370dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/lblPC5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00008B"
            android:text="Fecha Lavada"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtPedColchonFechaLav"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="DD/MM/AAAA"
            android:inputType="date" />

        <TextView
            android:id="@+id/lblPC6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00008B"
            android:text="Hora Lavada"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtPedColchonHoraLav"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="HH:MM 24hrs"
            android:inputType="time" />

        <TextView
            android:id="@+id/lblPC7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00008B"
            android:text="TamaÃ±o De Colchon"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/txtTamColchon"
            android:layout_width="370dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/lblPC8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#00008B"
            android:text="Marca Del Colchon"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/txtMarcaColchon"
            android:layout_width="370dp"
            android:layout_height="60dp" />

    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>